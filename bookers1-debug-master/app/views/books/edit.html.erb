<h1>Editing Book</h1>
<% if @book.errors.any? %>
    <%= @book.errors.count %>error
        <% @book.errors.full_messages.each do |message| %>
        <%= message %>
        <% end %>
 <%end%>

<%= form_with model:@book, local:true do |f| %>

<div class="field">
<label>Title</label>
<br>
<%= f.text_field :title %>
</div>

<div class="field">
<label>Body</label>
<br>
<%= f.text_area :body %>
</div>

<div class="actions">
<%= f.submit 'Update Book' %>
</div>
<% end %>
 <%= link_to "Show", book_path(@book) %>
 |
 <%= link_to "Back", books_path%>